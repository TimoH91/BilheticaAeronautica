<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilheticaAeronautica.Mobile.Pages.MyAccountPage"
             Title="MyAccountPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <!--<ImageButton Source="{Binding ImageFullPath}"
                         HeightRequest="120"
                         WidthRequest="110"
                         Aspect="AspectFill"
                         CornerRadius="30"
                         HorizontalOptions="Center" 
                         x:Name="ImgBtnProfile"
                         Clicked="ImgBtnProfile_Clicked"/>-->

        <Frame Padding="15" BackgroundColor="White">
            <VerticalStackLayout>
                <Entry Placeholder="Old Password"
                IsPassword="True"
                x:Name="EntOldPassword" />
                <Entry Placeholder="New Password"
                IsPassword="True"
                x:Name="EntNewPassword" />
                <Entry Placeholder="Confirm Password"
                IsPassword="True"
                x:Name="EntConfirmPassword" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Change Password"
         FontSize="Medium"
         x:Name="BtnChangePassword" 
         BackgroundColor="#a90409"
         Clicked="BtnChangePassword_Clicked"/>

        <Frame Padding="15" BackgroundColor="White">
            <VerticalStackLayout>
                <Entry Placeholder="New name"
                x:Name="EntName" />
                <Entry Placeholder="New surname"
                x:Name="EntSurname" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Change info"
         FontSize="Medium"
         x:Name="BtnChangeInfo" 
         BackgroundColor="#a90409"
         Clicked="BtnChangeInfo_Clicked"/>

    </VerticalStackLayout>
</ContentPage>
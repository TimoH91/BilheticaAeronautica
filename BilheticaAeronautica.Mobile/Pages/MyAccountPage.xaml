    <ScrollView>
        <VerticalStackLayout >
            <!--<Label Text="My Account Page"
               FontSize="Large"
               HorizontalOptions="Center" />-->

            <Frame Grid.Row="2"
                Padding="10"
                BackgroundColor="White"
                CornerRadius="10"
                HorizontalOptions="Center"
                WidthRequest="300"
                HasShadow="True"
                Margin="0,30,0,30">

                <VerticalStackLayout Spacing="15">
                    <Entry Placeholder="Old Password"
                           IsPassword="True"
                           x:Name="EntOldPassword" />
                    <Entry Placeholder="New Password"
                           IsPassword="True"
                           x:Name="EntNewPassword" />
                    <Entry Placeholder="Confirm Password"
                           IsPassword="True"
                           x:Name="EntConfirmPassword" />
                </VerticalStackLayout>
            </Frame>


            <Button Text="Change Password"
                    FontSize="Medium"
                    x:Name="BtnChangePassword"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    Clicked="BtnChangePassword_Clicked" />


            <Frame Padding="15"
                   BackgroundColor="White"
                   CornerRadius="10"
                   HasShadow="True"
                   HorizontalOptions="Center"
                   Margin="0,30,0,30"
                   WidthRequest="300">
                <VerticalStackLayout Spacing="15">
                    <Entry Placeholder="New Name" x:Name="EntName" />
                    <Entry Placeholder="New Surname" x:Name="EntSurname" />
                </VerticalStackLayout>
            </Frame>

            <Button Text="Change Info"
                    FontSize="Medium"
                    x:Name="BtnChangeInfo"
                    TextColor="White"
                    HorizontalOptions="Center"
                    WidthRequest="200"
                    Clicked="BtnChangeInfo_Clicked" />
        </VerticalStackLayout>
    </ScrollView>

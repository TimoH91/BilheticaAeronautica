<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilheticaAeronautica.Mobile.Pages.ProfilePage"
             Title="My profile">
    <Grid RowDefinitions="Auto,5*,1*" RowSpacing="0">

        <VerticalStackLayout Grid.Row="0"
                             BackgroundColor="DarkGrey"
                             VerticalOptions="Start"
                             Spacing="1"
                             Padding="20"
                             Margin="20,20,20,20">

            <ImageButton 
                         HeightRequest="120"
                         WidthRequest="110"
                         Aspect="AspectFill"
                         CornerRadius="30"
                         HorizontalOptions="Center" 
                         x:Name="ImgBtnProfile"
                         Clicked="ImgBtnProfile_Clicked"
                Margin="20,20,20,20"/>

            <Label x:Name="LblUserEmail"
                   HorizontalOptions="Center"
                   TextColor="Black"
                   Margin="20,20,20,20"/>
            
            <Label x:Name="LblUserName"
                   HorizontalOptions="Center"
                   TextColor="Black" />

        </VerticalStackLayout>


        <VerticalStackLayout Grid.Row="1"
                             Margin="20"
                             Spacing="20">
            <HorizontalStackLayout Spacing="10">
                <!--<Image Source="" HeightRequest="30" />-->
                <Label Text="My tickets"
                       FontSize="Large"
                       TextColor="#333"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="MyTickets" Tapped="MyTickets_Tapped"  />
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>

            <Border HeightRequest="1" BackgroundColor="Gray" />

            <HorizontalStackLayout Spacing="10">
                <!--<Image Source="" HeightRequest="30" />-->
                <Label Text="My account"
                      FontSize="Large"
TextColor="#333"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="MyAccount" Tapped="MyAccount_Tapped"/>
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>

            <Border HeightRequest="1" BackgroundColor="Gray" />

            <HorizontalStackLayout Spacing="10">
                <!--<Image Source="faq" HeightRequest="30" />-->
                <Label Text="About this app"
                      FontSize="Large"
TextColor="#333"/>
                <HorizontalStackLayout.GestureRecognizers>
                    <TapGestureRecognizer x:Name="About" Tapped="About_Tapped" />
                </HorizontalStackLayout.GestureRecognizers>
            </HorizontalStackLayout>

        </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="2"
                     Margin="20"
                     Spacing="20">
                <HorizontalStackLayout 
        Spacing="2"
        HorizontalOptions="Center"
        VerticalOptions="EndAndExpand">

                    <Label Text="Logout"
               FontSize="Medium"
               TextColor="#333">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer x:Name="Logout"
                                      Tapped="Logout_Tapped"/>
                        </Label.GestureRecognizers>
                    </Label>

                </HorizontalStackLayout>
            </VerticalStackLayout>

            <!--<ImageButton Grid.Row="2"
                Source=""
                HeightRequest="60"
                WidthRequest="60"
                Padding="5"
                ToolTipProperties.Text="Logout"
                HorizontalOptions="Center"
                BackgroundColor="Transparent"
                x:Name="BtnLogout"
                Clicked="BtnLogout_Clicked"/>-->
    </Grid>

</ContentPage>
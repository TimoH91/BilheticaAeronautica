<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilheticaAeronautica.Mobile.Pages.FlightsPage"
             Title="Flights">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button Text="Load Tickets" Clicked="OnLoadTicketsClicked" />

        <CollectionView x:Name="TicketList" HeightRequest="200">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Stroke="#87A7AC" StrokeShape="RoundRectangle 10">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="2*,8*" ColumnSpacing="10">
                            <Label  Grid.Row="1"
                           Grid.Column="1"
                            Text="{Binding FullName}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Load Flights" Clicked="Button_Clicked_1"/>

        <CollectionView x:Name="FlightList"
                SelectionMode="Single"
                SelectionChanged="FlightList_SelectionChanged"
                HeightRequest="200">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Padding="10" Stroke="#87A7AC" StrokeShape="RoundRectangle 10">
                        <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="2*,8*" ColumnSpacing="10">
                            <Label Grid.Row="1" Grid.Column="1" Text="{Binding Date}" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>


        <Button Text="Select Flight" Clicked="Button_Clicked_3"/>

        <Button Text="Recover password" Clicked="Button_Clicked"/>

        <Frame Padding="15" BackgroundColor="White">
            <VerticalStackLayout>
                <Entry Placeholder="Old Password"
                       IsPassword="True"
                       x:Name="EntOldPassword" />
                <Entry Placeholder="New Password"
                       IsPassword="True"
                       x:Name="EntNewPassword" />
                <Entry Placeholder="Confirm Password"
                       IsPassword="True"
                       x:Name="EntConfirmPassword" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Change Password"
                FontSize="Medium"
                x:Name="BtnSignIn" 
                BackgroundColor="#a90409"
                Clicked="BtnSignIn_Clicked"/>

        <!--<Button Text="Shopping Basket"
                FontSize="Medium"
                x:Name="BtnShoppingBasket" 
                BackgroundColor="#a90409"
                Clicked="BtnShoppingBasket_Clicked"/>-->

    </VerticalStackLayout>
</ContentPage>

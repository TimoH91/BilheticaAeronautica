<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilheticaAeronautica.Mobile.Pages.LoginPage"
             Title="Login"
             NavigationPage.HasNavigationBar="False">

    <Grid RowSpacing="20" Margin="20,20,20,40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>



        <!--<Label Grid.Row="1"
           Text="Login"
           FontAttributes="Bold"
           HorizontalOptions="Center" />-->

        <Frame Grid.Row="2"
           Padding="15"
           BackgroundColor="White"
               Margin="40,20,40,20">
            <VerticalStackLayout>
                <Entry Placeholder="Email"
                   x:Name="EntEmail" />
                <Entry Placeholder="Password"
                   IsPassword="True"
                   x:Name="EntPassword" />
            </VerticalStackLayout>
        </Frame>

        <Button Grid.Row="3"
            Text="Login"
            FontSize="Medium"
                HorizontalOptions="Center"
            x:Name="BtnSignIn" 
            Clicked="BtnSignIn_Clicked"/>

        <HorizontalStackLayout Grid.Row="4"
                           Spacing="2"
                           HorizontalOptions="Center"
                           VerticalOptions="EndAndExpand">
            <Label Text="Don't have an account? " />
            <Label Text="Register now" TextColor="#a90409" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapRegister"
                                      Tapped="TapRegister_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>

        <HorizontalStackLayout Grid.Row="5"
                    Spacing="2"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand">
            <Label Text="Forgotten your password?" />
            <Label Text="Recover password" TextColor="#a90409" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer x:Name="TapRecover"
                           Tapped="TapRecover_Tapped"/>
                </Label.GestureRecognizers>
            </Label>
        </HorizontalStackLayout>

    </Grid>
</ContentPage>
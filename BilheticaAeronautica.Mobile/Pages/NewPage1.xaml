<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BilheticaAeronautica.Mobile.Pages.NewPage1"
             Title="Tickets">

    <VerticalStackLayout Padding="20" Spacing="15">

        <Button Text="Load Tickets" Clicked="OnLoadTicketsClicked" />

        <CollectionView x:Name="TicketList" HeightRequest="200">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Label Text="{Binding FullName}" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Recover password" Clicked="Button_Clicked"/>

        <Frame Padding="15" BackgroundColor="White">
            <VerticalStackLayout>
                <Entry Placeholder="Old Password"
                       IsPassword="True"
                       x:Name="EntOldPassword" />
                <Entry Placeholder="New Password"
                       IsPassword="True"
                       x:Name="EntNewPassword" />
                <Entry Placeholder="Confirm Password"
                       IsPassword="True"
                       x:Name="EntConfirmPassword" />
            </VerticalStackLayout>
        </Frame>

        <Button Text="Change Password"
                FontSize="Medium"
                x:Name="BtnSignIn" 
                BackgroundColor="#a90409"
                Clicked="BtnSignIn_Clicked"/>

    </VerticalStackLayout>
</ContentPage>

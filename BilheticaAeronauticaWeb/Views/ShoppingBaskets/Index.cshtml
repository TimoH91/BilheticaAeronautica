@model BilheticaAeronauticaWeb.Models.ShoppingBasketWithUserViewModel

@{
    ViewData["Title"] = "Index";

}
<br />
<h1>Your Shopping Basket</h1>
<br />
<br />

@if (Model.ShoppingBasketTickets.Any()){
    <div class="card-body">
</div>


<div class="card mb-4">
    <div class="card-header">
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Surname</th>
                    <th>Class</th>
                    <th>Flight</th>
                    <th>Price</th>
                    <th>Type</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ShoppingBasketTickets)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Surname</td>
                        <td>@item.Class</td>
                        <td>@item.FlightId</td>
                        <td>@item.Price.ToString("C")</td>
                        <td>@item.PassengerType</td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


<form asp-action="Purchase" method="post">  <button type="submit" class="btn btn-success">Purchase</button>
</form>
}


<a asp-controller="flights" asp-action="Index" class="btn btn-primary">Add tickets</a>

@model BilheticaAeronauticaWeb.Entities.ShoppingBasketTicket

@{
    ViewData["Title"] = "Details";
}

<br />
<h1 class="text-center">Ticket Info</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">

        <p><strong>@Html.DisplayNameFor(model => model.Name):</strong> @Html.DisplayFor(model => model.Name)</p>
        <p><strong>@Html.DisplayNameFor(model => model.Surname):</strong> @Html.DisplayFor(model => model.Surname)</p>
        <p>
            <strong>@Html.DisplayNameFor(model => model.Flight):</strong>
            @Html.DisplayFor(model => model.Flight.OriginAirport.Name) to @Html.DisplayFor(model => model.Flight.DestinationAirport.Name)
        </p>
        <p><strong>@Html.DisplayNameFor(model => model.Class):</strong> @Html.DisplayFor(model => model.Class)</p>

        @if (Model.Seat != null)
        {
            <p><strong>@Html.DisplayNameFor(model => model.Seat.Row):</strong> @Html.DisplayFor(model => model.Seat.Row)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Seat.Column):</strong> @Html.DisplayFor(model => model.Seat.Column)</p>
        }
        else
        {
            <p><strong>Seat:</strong> Not assigned</p>
        }

        <p><strong>@Html.DisplayNameFor(model => model.Price):</strong> @Html.DisplayFor(model => model.Price)</p>

        <p><strong>Passenger Type:</strong> @Html.DisplayFor(model => model.PassengerType)</p>

        <div class="mt-4">
            <a asp-action="Index" class="btn btn-secondary">Back</a>
        </div>

    </div>
</div>
@using BilheticaAeronauticaWeb.Entities
@model BilheticaAeronauticaWeb.Models.TicketViewModel

@{
    ViewData["Title"] = "Details";
}


<div>
    <br />
     <form asp-controller="ShoppingBaskets" asp-action="CreateShoppingBasketTicket" method="post">
    <dl class="row">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Name" type="hidden" />
            <input asp-for="Surname" type="hidden" />
            <input asp-for="FlightId" type="hidden" />
            <input asp-for="Class" type="hidden" />
            <input asp-for="OriginAirportId" type="hidden" />
            <input asp-for="DestinationAirportId" type="hidden" />
            <input asp-for="Price" type="hidden" />
            <input asp-for="Type" type="hidden" />

            <div class="d-flex align-items-center">
                <select id="ResponsibleAdultTicketId" name="ResponsibleAdultTicketId" class="form-control" asp-items="ViewBag.Adults">
                    <option value="">Select a responsible adult</option>
                </select>

                <input type="submit" value="Confirm" class="btn btn-info ms-3 me-2" />
                <a asp-action="Index" class="btn btn-danger btn-dark" me-2">Back</a>
            </div>
    </dl>
    </form>
</div>



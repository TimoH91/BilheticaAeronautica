@model BilheticaAeronauticaWeb.Models.LoginViewModel
@{
    ViewData["Title"] = "Login"; 
}
<br />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4 text-center">
            <h1 class="mb-4">Login</h1>
            <form method="post">
                <div asp-validation-summary="ModelOnly"></div>
                <div class="form-group text-left">
                    <label asp-for="Username">Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-warning"></span>
                </div>
                <div class="form-group text-left">
                    <label asp-for="Password">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-warning"></span>
                </div>
                <div class="form-group text-left">
                    <div class="form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Remember me?</label>
                    </div>
                    <span asp-validation-for="RememberMe" class="text-warning"></span>
                </div>
                <div class="form-group text-center">
                    <input type="submit" value="Login" class="btn btn-dark" /> 
                    <br />
                    <a asp-action="Register" class="btn btn-info">Register New User</a>
                    <a asp-action="RecoverPassword" class="btn btn-link">Forgot your password?</a>
                </div>
            </form>
        </div>
    </div>
</div>


        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }


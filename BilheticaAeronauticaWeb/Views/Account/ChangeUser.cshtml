@model BilheticaAeronauticaWeb.Models.ChangeUserViewModel
@{
    ViewData["Title"] = "ChangeUser";
}
</br>

<h1>Profile Page</h1>

</br>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly"></div>
            <input type="hidden" asp-for="ImageId" />

            <div class="form-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-warning"></span>
            </div>

            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" data-val="false" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageFullPath))
            {
                <div class="text-center my-3">
                    <img src="@Model.ImageFullPath" alt="Image" class="img-fluid" style="max-width: 150px;" />
                </div>
            }

            <div class="form-group text-center">
                <input type="submit" value="Update" class="btn btn-primary me-2">
                <a asp-action="ChangePassword" class="btn btn-success">Change Password</a>
            </div>

            <div class="text-success">@ViewBag.UserMessage</div>
        </form>
    </div>
</div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }

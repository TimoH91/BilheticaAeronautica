@model IEnumerable<BilheticaAeronauticaWeb.Entities.User>

@{
    ViewData["Title"] = "Users";
}


<br />
<h1>Users</h1>

<br />
<div class="card mb-4">
    <div class="card-header">
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-bordered">
    <thead>
        <tr>
@*             <th>@Html.DisplayNameFor(model => model.First().Id)</th> *@
            <th>First name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Roles</th>
            <th>Photo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var user in Model)
            {
                <tr>
@*                     <td>@user.Id</td> *@
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>@user.Email</td>
                    <td>@user.Role</td>
                            <td>
                                @if (!string.IsNullOrEmpty(@user.ImageFullPath))

                                {
                                    <img src="@Url.Content(@user.ImageFullPath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto;" />
                                }
                            </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-light">Edit</a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-dark">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="5" class="text-center">No users found.</td>
            </tr>
        }
    </tbody>
</table>
<br />
        <p>
            <a asp-action="Create" class="btn btn-info">Create New User</a>
        </p>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatablesSimple').DataTable({
                pageLength: 10,
                language: {
                            search: "Search users:    ",
                    lengthMenu: "_MENU_" // Just the dropdown, no label
                }
            });
        });
    </script>
        }
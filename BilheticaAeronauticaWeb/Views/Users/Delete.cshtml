@model BilheticaAeronauticaWeb.Entities.User

@{
    ViewData["Title"] = "Delete";
}

<br />
<div class="container">
    <h3 class="text-center mb-4">Are you sure you want to delete this user?</h3>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Username:</strong> @Model.UserName</p>
            <p><strong>Role:</strong> @Model.Role</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger me-2" />
        </form>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>


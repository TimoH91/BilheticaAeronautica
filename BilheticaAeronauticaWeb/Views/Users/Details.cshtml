@model BilheticaAeronauticaWeb.Entities.User

@{
    ViewData["Title"] = "Details";
}

</br>
<div class="container">
    <h1 class="text-center mb-4">User Details</h1>

    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">  <!-- centered block -->
            <!-- Left-aligned text inside this centered container -->
            <p><strong>Id:</strong> @Model.Id</p>
            <p><strong>First Name:</strong> @Model.FirstName</p>
            <p><strong>Last Name:</strong> @Model.LastName</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Username:</strong> @Model.UserName</p>
            <p><strong>Role:</strong> @Model.Role</p>
            <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>

            @if (!string.IsNullOrEmpty(Model.ImageFullPath))
            {
                <p><strong>Image:</strong></p>
                <img src="@Url.Content(Model.ImageFullPath)" alt="User Image" style="width:100px; height:auto;" />
            }
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

@model BilheticaAeronauticaWeb.Entities.Flight

@{
    ViewData["Title"] = "Delete";
}
<br/>
<h3 class="text-center mb-4">Are you sure you want to delete this flight?</h3>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-6">
        <p><strong>Origin:</strong> @Html.DisplayFor(model => model.OriginAirport.Name)</p>
        <p><strong>Destination:</strong> @Html.DisplayFor(model => model.DestinationAirport.Name)</p>
        <p><strong>@Html.DisplayNameFor(model => model.Date):</strong> @Html.DisplayFor(model => model.Date)</p>
        <p><strong>@Html.DisplayNameFor(model => model.Time):</strong> @Html.DisplayFor(model => model.Time)</p>
        <p><strong>@Html.DisplayNameFor(model => model.Duration):</strong> @Html.DisplayFor(model => model.Duration)</p>
        <p><strong>@Html.DisplayNameFor(model => model.BasePrice):</strong> @Html.DisplayFor(model => model.BasePrice)</p>
    </div>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" class="d-inline">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger me-2" />
    </form>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>


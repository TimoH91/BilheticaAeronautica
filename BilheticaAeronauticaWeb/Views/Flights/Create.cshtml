@model BilheticaAeronauticaWeb.Models.FlightViewModel

@{
    ViewData["Title"] = "Create";
}
<br/>
<h1>Add new flight</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Date" class="control-label" ></label>
                <input asp-for="Date" type="date" class="form-control"
                       style="color: black; background-color: white; -webkit-text-fill-color: black;" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Duration" class="control-label">Duration (minutes)</label>
                <input asp-for="Duration" class="form-control" />
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BasePrice" class="control-label">Base Price</label>
                <input asp-for="BasePrice" class="form-control" />
                <span asp-validation-for="BasePrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirplaneId" class="control-label">Airplane</label>
                <select asp-for="AirplaneId" asp-items="ViewBag.Airplanes" class="form-control">
                    <option value="">Select an airplane</option>
                </select>
                <span asp-validation-for="AirplaneId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OriginAirportId" class="control-label">Origin Airport</label>
                <select asp-for="OriginAirportId" asp-items="ViewBag.Airports" class="form-control">
                    <option value="">Select an airport</option>
                </select>
                <span asp-validation-for="OriginAirportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DestinationAirportId" class="control-label">Destination Airport</label>
                <select asp-for="DestinationAirportId" asp-items="ViewBag.Airports" class="form-control">
                    <option value="">Select an airport</option>
                </select>
                <span asp-validation-for="DestinationAirportId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LayoverId" class="control-label">Layover Airport</label>
                <select asp-for="LayoverId" asp-items="ViewBag.Airports" class="form-control">
                    <option value="">Select an airport</option>
                </select>
                <span asp-validation-for="LayoverId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

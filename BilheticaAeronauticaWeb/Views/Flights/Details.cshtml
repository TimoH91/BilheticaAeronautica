@model BilheticaAeronauticaWeb.Entities.Flight

@{
    ViewData["Title"] = "Details";
}
<br />
<div class="container">
    <h1 class="text-center mb-4">Details</h1>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <p><strong>@Html.DisplayNameFor(model => model.Date):</strong> @Html.DisplayFor(model => model.Date)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Time):</strong> @Html.DisplayFor(model => model.Time)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Duration):</strong> @Html.DisplayFor(model => model.Duration)</p>
            <p><strong>@Html.DisplayNameFor(model => model.BasePrice):</strong> @Html.DisplayFor(model => model.BasePrice)</p>
            <p><strong>@Html.DisplayNameFor(model => model.Airplane):</strong> @Html.DisplayFor(model => model.Airplane.Name)</p>
            <p><strong>Available Seats:</strong> @ViewBag.availableSeats</p>
            <p><strong>Adult Tickets:</strong> @ViewBag.adultTickets</p>
            <p><strong>Infant Tickets:</strong> @ViewBag.infantTickets</p>
            <p><strong>Child Tickets:</strong> @ViewBag.childTickets</p>
        </div>
    </div>

    <div class="text-center mt-4">
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-info me-2">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

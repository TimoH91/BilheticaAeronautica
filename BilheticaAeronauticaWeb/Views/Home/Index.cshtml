@{
    ViewData["Title"] = "Home Page";
}

<br />
<body>

    <div class="background-image-div" style="border-radius: 15px;">
        <div class="container d-flex justify-content-center align-items-center" style="min-height: 600px;">
            <div class="card custom-bg w-75 p-4">
                <div class="row">
                    <div class="pb-3 h3 text-left" style="color: black;">Flight Search</div>
                </div>
                <form id="flight-form" asp-action="SearchFlightsWithAirports" method="get">
                <div class="row">
                        <div class="form-group col-md align-items-start flex-column">
                            <label for="originAirportId" class="d-inline-flex" style="color: black;">From</label>
                            <select class="form-select" id="originAirportId" name="originAirportId" asp-items="ViewBag.Airports" required>
                                <option value="">Select an airport</option>
                            </select>
                        </div>

                        <div class="form-group col-md align-items-start flex-column">
                            <label for="destinationAirportId" class="d-inline-flex" style="color: black;">To</label>
                            <select class="form-select" id="destinationAirportId" name="destinationAirportId" asp-items="ViewBag.Airports" required>
                                <option value="">Select an airport</option>
                            </select>
                        </div>
                </div>
                <div class="row">
                    <div class="form-group col-md align-items-start flex-column">
                            <label for="departureDate" class=" d-inline-flex" style="color: black;">Depart</label>
                            <input type="date" class="form-control" id="departureDate" name="departureDate"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")"
                                   onkeydown="return false" />
                    </div>
                    <div class="form-group col-md align-items-start flex-column">
                            <label for="returnDate" class="d-inline-flex" style="color: black;">Return</label>
                            <input type="date" class="form-control" id="returnDate" name="returnDate" disabled>
                    </div>
                </div>

                <div class="row">
                    <div class="form-group col-lg-6 align-items-start flex-column">
                            <label for="cabin" class="d-inline-flex" style="color: black;">Ticket type</label>
                        <select class="form-select" id="cabin">
                            <option value="ECONOMY">Economy</option>
                            <option value="BUSINESS">Business</option>
                        </select>
                    </div>
                    @* <div class="form-group col-lg-6 align-items-start flex-column pt-lg-4">
                        <div class="form-check form-switch">
                            <input class="form-check-input align-self-center" type="checkbox" id="directFlights">
                            <label class="form-check-label d-inline-flex align-self-center" for="directFlights">
                                Direct
                                flights
                            </label>
                        </div>
                    </div> *@
                </div>
                <div class="row">
                    <div class="text-left col-auto">
                        <button type="submit" class="btn btn-info">Search flights</button>
                            @* <a asp-action="SearchFlights" class="btn btn-info">Search Flights</a> *@
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("flight-form");
            const departureDateInput = document.getElementById("departureDate");
            const returnDateInput = document.getElementById("returnDate");

            form.addEventListener("submit", function (e) {
                const today = new Date();
                today.setHours(0, 0, 0, 0); 
                const hasDepartureDate = departureDateInput.value !== "";
                const hasReturnDate = returnDateInput.value !== "";

                const departureDate = new Date(departureDateInput.value);
                const returnDate = new Date(returnDateInput.value);


                if (hasDepartureDate && departureDate < today) {
                    alert("Departure date must be in the future.");
                    e.preventDefault();
                    return;
                }

                if (hasReturnDate && returnDate < today) {
                    alert("Return date must be in the future.");
                    e.preventDefault();
                    return;
                }

                if (hasDepartureDate && hasReturnDate) {
                    form.action = "/Home/SearchFlightsWithAirportsAndReturn";
                } else if (hasDepartureDate) {
                    form.action = "/Home/SearchFlightsWithAirportsAndDate";
                } else {
                    form.action = "/Home/SearchFlightsWithAirports";
                }
            });
        });
    </script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const form = document.getElementById("flight-form");
            const departureDateInput = document.getElementById("departureDate");
            const returnDateInput = document.getElementById("returnDate");

            returnDateInput.disabled = true;

            departureDateInput.addEventListener("change", function () {
                if (departureDateInput.value) {
                    const departureDate = new Date(departureDateInput.value);
                    departureDate.setDate(departureDate.getDate() + 1); 

                    returnDateInput.min = departureDate.toISOString().split("T")[0];
                    returnDateInput.disabled = false;
                } else {
                    returnDateInput.value = "";
                    returnDateInput.disabled = true;
                }
            });

            form.addEventListener("submit", function (e) {
                const today = new Date();
                today.setHours(0, 0, 0, 0);

                const departure = new Date(departureDateInput.value);
                const returnDate = new Date(returnDateInput.value);

                if (departureDateInput.value && departure < today) {
                    alert("Departure date must be in the future.");
                    e.preventDefault();
                    return;
                }

                if (returnDateInput.value && returnDate < departure) {
                    alert("Return date must be after departure date.");
                    e.preventDefault();
                    return;
                }

                if (departureDateInput.value && returnDateInput.value) {
                    form.action = "/Home/SearchFlightsWithAirportsAndReturn";
                } else if (departureDateInput.value) {
                    form.action = "/Home/SearchFlightsWithAirportsAndDate";
                } else {
                    form.action = "/Home/SearchFlightsWithAirports";
                }
            });
        });
    </script>
}

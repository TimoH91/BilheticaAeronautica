@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>@ViewBag.Title - My ASP.NET App</title>
    <link href="https://cdn.syncfusion.com/ej2/30.1.41/material.css" rel="stylesheet" />
    <link href="https://use.fontawesome.com/releases/v6.3.0/css/all.css" rel="stylesheet" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.dataTables.css" />
    <link href="@Url.Content("~/css/styles.css")" rel="stylesheet" />
</head>
<body class="sb-nav-fixed">
    <nav class="sb-topnav navbar navbar-expand navbar-dark bg-dark">
        <a class="navbar-brand ps-3" href="@Url.Action("Index", "Home")">Brisa 97</a>
        <button class="btn btn-link btn-sm order-1 order-lg-0 me-4 me-lg-0" id="sidebarToggle"><i class="fas fa-bars"></i></button>
        <form class="d-none d-md-inline-block form-inline ms-auto me-0 me-md-3 my-2 my-md-0">
            <div class="input-group">
                <input class="form-control" type="text" placeholder="Search for..." aria-label="Search for..." aria-describedby="btnNavbarSearch" />
                <button class="btn btn-primary" id="btnNavbarSearch" type="button"><i class="fas fa-search"></i></button>
            </div>
        </form>
        <div class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <a class="nav-link" href="@Url.Action("Index", "ShoppingBaskets")">
                <i class="fas fa-shopping-cart"></i> Basket
            </a>
        </div>
        <ul class="navbar-nav ms-auto ms-md-0 me-3 me-lg-4">
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user fa-fw"></i>
                    @(User.Identity.IsAuthenticated ? User.Identity.Name : "Guest")
                </a>
                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="ChangeUser">Account</a></li>
                        @*                     <li><a class="dropdown-item" href="#">Settings</a></li> *@
                        <li><hr class="dropdown-divider" /></li>

                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a></li>
                    }

                    @if (!User.Identity.IsAuthenticated)
                    {
                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Login">Login</a></li>
                        <li><a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Register">Register</a></li>
                    }
                </ul>
            </li>
        </ul>
    </nav>

    <div id="layoutSidenav">
        <div id="layoutSidenav_nav">
            <nav class="sb-sidenav accordion sb-sidenav-light" id="sidenavAccordion">
                <div class="sb-sidenav-menu">
                    <div class="nav">
                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <div class="sb-sidenav-menu-heading">Users</div>
                            <a class="nav-link" asp-controller="Users" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Manage
                            </a>
                            <a class="nav-link" asp-controller="Users" asp-action="Create">
                                <div class="sb-nav-link-icon"><i class="fas fa-tachometer-alt"></i></div>
                                Create
                            </a>
                        }

                        <div class="sb-sidenav-menu-heading">Menu</div>
                        <a class="nav-link collapsed" data-bs-toggle="collapse" data-bs-target="#collapseFlights" aria-expanded="false" aria-controls="collapseFlights">
                            <div class="sb-nav-link-icon"><i class="fas fa-plane-departure"></i></div>
                            Flights
                            <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                        </a>

                        <div class="collapse" id="collapseFlights" aria-labelledby="headingFlights" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav">
                                @{
                                    if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                    {
                                        <text>
                                            <a class="nav-link" asp-area="" asp-controller="Flights" asp-action="Index">Search</a>
                                        </text>
                                        ;
                                    }
                                    else if (User.Identity.IsAuthenticated && User.IsInRole("Staff"))
                                    {
                                        <text>
                                            <a class="nav-link" asp-area="" asp-controller="Flights" asp-action="Index">Manage</a>
                                            <a class="nav-link" asp-area="" asp-controller="Flights" asp-action="Create">Create</a>
                                        </text>
                                        ;
                                    }
                                    else
                                    {
                                        <text>
                                            <a class="nav-link" asp-area="" asp-controller="Flights" asp-action="AllFutureFlights">Search</a>
                                        </text>
                                        ;
                                    }
                                }
                            </nav>
                        </div>


                        @if (User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAirplanes" aria-expanded="false" aria-controls="collapseAirplanes">
                                <div class="sb-nav-link-icon"><i class="fas fa-plane"></i></div>
                                Airplanes
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseAirplanes" aria-labelledby="headingAirplanes" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-area="" asp-controller="Airplanes" asp-action="Index">Manage</a>
                                </nav>
                            </div>
                        }

                        @if (this.User.Identity.IsAuthenticated && this.User.IsInRole("Admin"))
                        {
                            <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#collapseAirports" aria-expanded="false" aria-controls="collapseAirports">
                                <div class="sb-nav-link-icon"><i class="fas fa-globe"></i></div>
                                Airports
                                <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                            </a>
                            <div class="collapse" id="collapseAirports" aria-labelledby="headingAirports" data-bs-parent="#sidenavAccordion">
                                <nav class="sb-sidenav-menu-nested nav">
                                    <a class="nav-link" asp-area="" asp-controller="Airports" asp-action="Index">Manage</a>
                                    <a class="nav-link" asp-area="" asp-controller="Countries" asp-action="Index">Registered countries</a>
                                </nav>
                            </div>
                        }



                        <div class="collapse" id="collapsePages" aria-labelledby="headingTwo" data-bs-parent="#sidenavAccordion">
                            <nav class="sb-sidenav-menu-nested nav accordion" id="sidenavAccordionPages">
                                <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#pagesCollapseAuth" aria-expanded="false" aria-controls="pagesCollapseAuth">
                                    Authentication
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a>
                                <div class="collapse" id="pagesCollapseAuth" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordionPages">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="@Url.Content("~/login.html")">Login</a>
                                        <a class="nav-link" href="@Url.Content("~/register.html")">Register</a>
                                        <a class="nav-link" href="@Url.Content("~/password.html")">Forgot Password</a>

                                    </nav>
                                </div>
                                @*  <a class="nav-link collapsed" href="#" data-bs-toggle="collapse" data-bs-target="#pagesCollapseError" aria-expanded="false" aria-controls="pagesCollapseError">
                                    Error
                                    <div class="sb-sidenav-collapse-arrow"><i class="fas fa-angle-down"></i></div>
                                </a> *@
                                @*   <div class="collapse" id="pagesCollapseError" aria-labelledby="headingOne" data-bs-parent="#sidenavAccordionPages">
                                    <nav class="sb-sidenav-menu-nested nav">
                                        <a class="nav-link" href="@Url.Content("~/401.html")">401 Page</a>
                                        <a class="nav-link" href="@Url.Content("~/404.html")">404 Page</a>
                                        <a class="nav-link" href="@Url.Content("~/500.html")">500 Page</a>
                                    </nav>
                                </div> *@
                            </nav>
                        </div>

                        @if (this.User.Identity.IsAuthenticated && !this.User.IsInRole("Admin") && !this.User.IsInRole("Staff") || !this.User.Identity.IsAuthenticated)
                        {
                            <div class="sb-sidenav-menu-heading">My bookings</div>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="Index">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                Manage Reservations
                            </a>

                        }

                        @if (this.User.IsInRole("Staff") && this.User.Identity.IsAuthenticated)
                        {
                            <div class="sb-sidenav-menu-heading">Customer bookings</div>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Orders" asp-action="CustomerOrders">
                                <div class="sb-nav-link-icon"><i class="fas fa-chart-area"></i></div>
                                View Reservations
                            </a>

                        }
                    </div>
                </div>
                <div class="sb-sidenav-footer">
                    <div class="small"></div>
                </div>
            </nav>
        </div>

        <div id="layoutSidenav_content">
            <main>
                <div class="container d-flex justify-content-center">
                    <div class="w-100" style="max-width: 3000px;">
                        @RenderBody()
                        <flash />
                    </div>
                </div>
            </main>
            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">
                            Copyright &copy; Timothy Harris @(DateTime.Now.Year) - Version 3.0
                        </div>
                        <div>
                            <a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
                            &middot;
                            <a asp-controller="Home" asp-action="Terms">Terms &amp; Conditions</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="@Url.Content("~/js/scripts.js")"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.js"></script>
    <script src="https://cdn.syncfusion.com/ej2/30.1.41/dist/ej2.min.js"></script>


    <script src="https://cdn.syncfusion.com/ej2/30.1.41/ej2-maps/dist/global/ej2-maps.min.js"></script>


    <!-- PivotView Script -->
    <script src="https://cdn.syncfusion.com/ej2/22.2.36/dist/ej2-pivotview.min.js"></script>

    <!-- PivotView Toolbar Script -->
    <script src="https://cdn.syncfusion.com/ej2/22.2.36/dist/ej2-pivotview-toolbar.min.js"></script>

    <!-- Syncfusion ASP.NET Core Script Manager -->
    <ejs-scripts></ejs-scripts>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
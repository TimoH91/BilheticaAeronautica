@using Newtonsoft.Json
@using Syncfusion.EJ2.Maps;
@model IEnumerable<BilheticaAeronauticaWeb.Entities.Airport>


@{
    var propertyPath = new[] { "name" };


    var countryDataJson = ViewBag.countryData;
    var map = ViewBag.worldmap;
}


<div class="card mb-4">
    <div class="card-header">
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.City.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Country.ImageFullPath)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.City.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Country.Name)
                        </td>
                        <td>
                            @if (item.Country != null && !string.IsNullOrEmpty(item.Country.ImageFullPath))

                            {
                                <img src="@Url.Content(item.Country.ImageFullPath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto;" />
                            }
                        </td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-light">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-dark">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

<p>
            <a asp-action="Create" class="btn btn-info">Add airport</a>
</p>

@*         <div id="container" style="height:400px"></div> *@

        <ejs-maps id="maps">
            <e-maps-titlesettings text="Currently flying in these countries"></e-maps-titlesettings>
            <e-maps-layers>
                <e-maps-layer shapeData="@(map)"
                              shapeDataPath="Country"
                              shapePropertyPath="propertyPath"
                              dataSource='@countryDataJson'>
                    <e-layersettings-shapesettings colorValuePath="Color"
                                                   fill="#E5E5E5">
                    </e-layersettings-shapesettings>
                </e-maps-layer>
            </e-maps-layers>
        </ejs-maps>


@section Scripts {
    <script>
        $(document).ready(function () {
            $('#datatablesSimple').DataTable({
                pageLength: 10,
                language: {
            search: "Search airports: ",
            lengthMenu: "_MENU_" 
                }
            });
        });
    // </script>

            }


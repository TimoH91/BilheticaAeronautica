@model BilheticaAeronauticaWeb.Models.CountryViewModel

@{
    ViewData["Title"] = "Edit ";
}
<br />
<h1>Edit country</h1>
<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="FlagImageId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageFile" class="control-label"></label>
                <input asp-for="ImageFile" class="form-control" type="file" data-val="false" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageFullPath))
            {
                <div class="form-group mt-3">
                    <img src="@Url.Content(Model.ImageFullPath)"
                         alt="Current image"
                         class="img-thumbnail"
                         style="width: 150px; height: auto; display: block;" />
                </div>
            }

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info me-3" />
                <a asp-action="Index" class="btn btn-warning btn-dark">Back</a>
            </div>
        </form>
    </div>
</div>

<div>

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

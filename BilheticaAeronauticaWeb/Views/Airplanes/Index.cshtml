@model IEnumerable<BilheticaAeronauticaWeb.Entities.Airplane>

@{
    ViewData["Title"] = "Index";
}


<div class="card mb-4">
    <div class="card-header">
    </div>
    <div class="card-body">
        <table id="datatablesSimple" class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rows)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatsPerRow)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rows)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsPerRow)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImageFullPath))

                    {
                        <img src="@Url.Content(item.ImageFullPath)" alt="Image" style="width:100px;height:150px;max-width:100%;height:auto;" />
                    }
                </td>
            <td>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-light">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-dark">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

        <p>
            <a asp-action="Create" class="btn btn-info">Add airplane</a>
        </p>

            @section Scripts {
                <script>
                    $(document).ready(function () {
                        $('#datatablesSimple').DataTable({
                            pageLength: 10,
                            language: {
                        search: "Search airplanes: ",
                        lengthMenu: "_MENU_" // Just the dropdown, no label
                            }
                        });
                    });
                </script>
            }
